#!/bin/bash

set -exu

# Copy common utils
mkdir -p ${BOSH_INSTALL_TARGET}/common
cp -a ${BOSH_COMPILE_TARGET}/common/* ${BOSH_INSTALL_TARGET}/common

export GOROOT="$(readlink -nf /var/vcap/packages/golang1.8)"
export GOPATH="${BOSH_INSTALL_TARGET}"
export PATH="${GOROOT}/bin:${PATH}"

mkdir -p "${BOSH_INSTALL_TARGET}/src"
cp -a github.com "${BOSH_INSTALL_TARGET}/src/"

mkdir -p "${BOSH_INSTALL_TARGET}/src/github.com/18F/cg-snort-boshrelease/src/snort-logger"
cp -a snort-logger "${BOSH_INSTALL_TARGET}/src/github.com/18F/cg-snort-boshrelease/src/"

go install "github.com/18F/cg-snort-boshrelease/src/snort-logger"
